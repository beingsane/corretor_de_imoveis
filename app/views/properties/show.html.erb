<div class="row justify-content-center">
  <div class="col-md-10 col">

    <div class="row no-gutters">
      <% if flash[:notice] %>
        <div class="col-12">
          <%= render "partials/alert_success", msg: flash[:notice] %>
        </div>
      <% end %>

      <div class="col-12 card mb-2">
        <div class="row no-gutters p-2">
          <div class="col-8">
            <h1 class="mb-0">
              <%= @property.title %>
              <%= link_to [:edit, @property] do %>
                <i class="fa fa-pencil" title="Editar"></i>
              <% end %>
            </h1>
          </div>
          <div class="col-4 align-self-center text-right">
            <%= link_to("Voltar", prev_page) %>
          </div>
        </div>
      </div>

      <div class="col-md-7 mb-2 pr-sm-2">
        <div class="col-12 card p-3 mr-2" id="property-gallery">
          <h2>Galeria</h2>
          <% if has_gallery? @property %>
            <%= link_to @property.gallery.images.first.large.url, class: "gallery-image" do %>
              <div style="background-image:url(<%= @property.gallery.images.first.large.url %>)"></div>
            <% end %>

            <ul class="list-inline list-unstyled mt-2">
              <% @property.gallery.images.each_with_index do |image, index|  %>
                <% unless index == 0 %>
                  <li href="<%= image.large.url %>" class="gallery-image list-inline-item">
                    <div style="background-image:url(<%= image.small.url %>)"></div>
                  </li>
                <% end %>
              <% end %>
            </ul>
          <% else %>
            Nenhuma imagem para ser exibida.
          <% end %>
        </div>

        <div class="d-none d-md-block">
          <%= render "partials/display_extras", property: @property %>
        </div>

      </div>

      <div class="col-md-5">
        <div class="card p-3 mb-2">
          <h2>Informações gerais</h2>
          <%= render "partials/general_property_information", property: @property %>

          <h2>Características <%= I18n.t "views.#{@property.type}.ofthe" %></h2>
          <%= render "partials/specific_property_information", property: @property %>
        </div>

        <div class="d-block d-md-none">
          <%= render "partials/display_extras", property: @property %>
        </div>

        <div class="col-12 card p-3">
          <h2>Perguntar sobre o imóvel</h2>
          <div class="form-group">
            <label>seu e-mail</label>
            <input type="email" class="form-control">
          </div>

          <div class="form-group">
            <label>sua mensagem</label>
            <textarea name="name" rows="8" class="form-control"></textarea>
          </div>

          <div class="form-group text-right mb-0">
            <button type="submit" class="btn btn-primary">Enviar</button>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>
