
<div class="row no-gutters mb-2">
  <div class="col-12 card">
    <div class="row no-gutters p-2">
      <div class="col-8">
        <h1 class="mb-0">Nova Casa</h1>
      </div>
      <div class="col-4 align-self-center text-right">
        <%= link_to("Voltar", root_path) %>
      </div>
    </div>
  </div>
</div>

<%= form_for @property, url: {action: "create"}  do |f| %>
  <div class="row no-gutters">

    <div class="col-md-4 pr-md-2 pb-2">
      <div class="col-12 p-3 card">
        <div class="row no-gutters">
          <div class="col-6 align-self-center">
            <h2>Galeria</h2>
          </div>
          <div class="col-6 text-right align-self-center">
            <label class="fileContainer">
              <button class="btn btn-sm btn-primary">
                Adicionar <i class="fa fa-file-image-o"></i>
              </button>
              <input multiple="true" type="file" accept="image/*"
              name="gallery[images]" id="property_images">
            </label>
          </div>
        </div>
        <ul class="list-unstyled list-inline mb-2" id="uploaded_property_images">
          <% if !@property.gallery.blank? %>
            <% @property.gallery.images.each_with_index do |image, index| %>

              <li class="list-inline-item">
                <div style="background-image:url(<%= image.url  %>)" class="list-inline-item"></div>
              </li>

            <% end %>
          <% end %>
        </ul>

      </div>
    </div>

    <div class="col-md-8 card p-3">

      <h2>Informações gerais</h2>
      <div class="form-row mb-2">
        <%= render "partials/property_fields", f: f %>
      </div>

      <h2>Atributos do imóvel</h2>
      <div class="form-row">
        <div class="form-group col-sm-6 col-md-3">
          <label>Perfil</label>
          <%= f.select :profile, options_for_select(House.attributes_for_select "profiles"),
          {}, {class: "form-control #{validate_field(@property, :profile)}"} %>
            <%= error_message_for_field(@property, :profile) %>
        </div>

        <div class="form-group col-sm-6 col-md-3">
          <label>Número de Quartos</label>
          <%= f.number_field :number_of_rooms,
          class: "form-control #{validate_field(@property, :number_of_rooms)}" %>
            <%= error_message_for_field(@property, :number_of_rooms) %>
        </div>

        <div class="form-group col-sm-6 col-md-3">
          <label>Área Privada</label>
          <%= f.text_field :private_area, class: "form-control #{validate_field(@property, :private_area)}" %>
          <%= error_message_for_field(@property, :private_area) %>
        </div>

        <div class="form-group col-sm-6 col-md-3">
          <label>Posição</label>
          <%= f.select :position, options_for_select(House.attributes_for_select "positions"),
          {}, {class: "form-control #{validate_field(@property, :position)}"} %>
          <%= error_message_for_field(@property, :position) %>
        </div>

        <div class="form-group col-12 text-right">
          <%= f.submit "Criar", class: "btn btn-success" %>
        </div>

      </div>


      </div>
    </div>
  </div>
<% end %>
