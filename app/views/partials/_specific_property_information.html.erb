<% case property.type %>
<% when "Apartment" %>
  <dl class="row no-gutters">
    <dt class="col-sm-6 text-secondary">Quartos</dt>
    <dd class="col-sm-6 text-right"><%= I18n.t "views.number_of_rooms.#{property.number_of_rooms}" %></dd>
    <dt class="col-sm-6 text-secondary">Nº de Boxes</dt>
    <dd class="col-sm-6 text-right"><%= property.number_of_boxes %></dd>
    <dt class="col-sm-6 text-secondary">Área privada</dt>
    <dd class="col-sm-6 text-right"><%= square_meters property.private_area %></dd>
  </dl>
<% when "House" %>
  <dl class="row no-gutters">
    <dt class="col-sm-6 text-secondary">Quartos</dt>
    <dd class="col-sm-6 text-right"><%= property.number_of_rooms %></dd>
    <dt class="col-sm-6 text-secondary">Posição</dt>
    <dd class="col-sm-6 text-right"><%= I18n.t "views.#{property.position}" %></dd>
    <dt class="col-sm-6 text-secondary">Área privada</dt>
    <dd class="col-sm-6 text-right"><%= square_meters property.private_area %></dd>
  </dl>
<% end %>
