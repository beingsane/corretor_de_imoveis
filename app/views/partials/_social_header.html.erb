<% content_for :head do %>
  <meta property="fb:app_id" content="<%= ENV['FACEBOOK_KEY'] %>">
  <meta property="og:url" content="<%= request.original_url %>">
  <meta property="og:type" content="article">

  <% if @property %>
    <meta property="og:title" content="<%= @property.title %>">
    <meta property="og:description" content="<%= property_description @property %>">

    <meta name="twitter:title" content="<%= @property.title %>">
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:description" content="<%= property_description @property %>">
    <meta name="twitter:domain" content="<%= request.domain %>">

    <% if has_gallery? @property %>
      <meta property="og:image" content="<%= @property.gallery.images.first.url %>">
      <meta name="twitter:image" content="<%= @property.gallery.images.first.url %>">
      <meta property="og:image:width" content="1080">
    <% end %>
  <% end %>
<% end %>
