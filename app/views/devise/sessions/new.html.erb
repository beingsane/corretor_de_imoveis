<% if flash[:notice] %>
  <div class="col-12">
    <%= render "partials/alert_success", msg: flash[:notice] %>
  </div>
<% end %>

<% if flash[:alert] %>
  <div class="col-12">
    <%= render "partials/alert_danger", msg: flash[:alert] %>
  </div>
<% end %>

<div class="row justify-content-center">
  <div class="col-lg-4 col-md-6 col-12 card p-3">
    <h2 class="font-weight-bold">√Årea Restrita <i class="fa fa-lock" aria-hidden="true"></i></h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-row mt-2">
        <div class="form-group col-12">
          <%= f.text_field :email, autofocus: true, class: "form-control" %>
        </div>
        <div class="form-group col-12">
          <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
        </div>

         <% if devise_mapping.rememberable? %>
          <div class="form-group col-12 mb-0">
            <div class="form-check">
              <label class="form-check-label">
                <%= f.check_box :remember_me, class: "form-check-input" %>
                Lembrar?
              </label>
            </div>
          </div>
        <% end %>

        <div class="form-group col-12 mb-0">
          <%= f.submit "Entrar", class: "btn btn-success btn-block" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
